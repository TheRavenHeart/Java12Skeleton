<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>
<VBox fx:id="root" fx:controller="DistanceConverter" xmlns:fx="http://javafx.com/fxml">
    <stylesheets>
        <URL value="@Main.css" />
    </stylesheets>
    <children>
        <TextField fx:id="TextField1"></TextField>
        <TextField fx:id="TextField2"></TextField>
        <Button fx:id="buttonIN" onAction="#InButtonAction">Centimetres to Inches</Button>
        <Button fx:id="buttonCEN" onAction="#CenButtonAction">Inches to Centimetres</Button>    
    </children>
</VBox>